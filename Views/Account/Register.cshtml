@model MyProject_MVC.Models.User

@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nike | @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>
    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 login-section-wrapper">
                    <div class="brand-wrapper">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/images/logo/Logo_NIKEpng.png" alt="logo" class="logo">
                        </a>
                    </div>
                    <div class="login-wrapper my-auto">
                        <h1 class="login-title">Register</h1>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="UserName">User Name</label>
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", required = "required" })
                            </div>
                            <div class="form-group">
                                <label for="UserEmail">Email</label>
                                @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control", type = "email", required = "required" })
                            </div>
                            <div class="form-group mb-4">
                                <label for="UserPassword">Password</label>
                                @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", required = "required" })
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <p class="ps-2 text-danger">@ViewBag.ErrorMessage</p>
                                }
                            </div>
                            <button type="submit" class="btn btn-block login-btn">Register</button>
                        }
                        <a href="#!" class="forgot-password-link">Forgot password?</a>
                        <p>
                            Already have an account?
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "text-reset" })
                        </p>

                    </div>
                </div>
                <div class="col-sm-6 px-0 d-none d-sm-block">
                    <img src="~/images/home/register.jpg" alt="login image" class="login-img">
                </div>
            </div>
        </div>
    </main>
</body>
</html>