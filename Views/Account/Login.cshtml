@model MyProject_MVC.Models.User

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nike | @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="~/images/home/login.jpg" alt="login" class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <a href="@Url.Action("Index", "Home")">
                                    <img src="~/images/logo/Logo_NIKEpng.png" alt="logo" class="logo">
                                </a>
                            </div>
                            <p class="login-card-description">Sign into your account</p>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="email" class="sr-only">Email</label>
                                    @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-control", type = "email", required = "required", @placeholder = "Email adress" })
                                </div>
                                <div class="form-group mb-5 position-relative">
                                    <label for="password" class="sr-only">Password</label>
                                    @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", required = "required", @placeholder = "Your password" })
                                    @if (!string.IsNullOrEmpty(ViewBag.error))
                                    {
                                        <p class="text-danger fw-bold position-absolute" style="top: 57px">@ViewBag.error</p>
                                    }
                                </div>
                                <button type="submit" class="btn btn-block login-btn my-4">Login</button>

                            }
                            <a href="#!" class="forgot-password-link">Forgot password?</a>
                            <p class="login-card-footer-text">Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-reset">Register here</a></p>
                            <nav class="login-card-footer-nav">
                                <a href="#!">Terms of use.</a>
                                <a href="#!">Privacy policy</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
