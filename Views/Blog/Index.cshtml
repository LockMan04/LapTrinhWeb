@model IEnumerable<MyProject_MVC.Models.Blog>
@{
    ViewBag.Title = "Index";
}


<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @Html.Partial("_BlogSidebar")
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="@item.BlogAvata" alt="" style="object-fit: cover">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> @item.CreatedAt</li>
                                        <li><i class="fa fa-comment-o"></i> 5</li>
                                    </ul>
                                    <h5><a href="@Url.Action("Details", "Blog", new {id = item.BlogId})">@item.Title</a></h5>
                                    <p class="h-25">
                                        @item.SummaryContent
                                    </p>
                                    <a href="@Url.Action("Details", "Blog", new {id = item.BlogId})" class="blog__btn">READ MORE <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    }

                    @*<div class="col-lg-12">
                        <div class="product__pagination blog__pagination">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->
