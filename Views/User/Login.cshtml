
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Humberger Begin -->
    <section class="signup vh-100 position-relative">
        <div class="container position-absolute top-50 start-50 translate-middle">
            <div class="signup-content">
                <div class="signup-form">
                    <a href="@Url.Action("Index", "Home")"><i class="bi bi-arrow-left"></i></a>
                    <h2 class="form-title py-4">Login</h2>
                    <form method="POST" class="register-form" id="register-form" action="@Url.Action("Index", "Home")">
                        <div class="form-group">
                            <label for="name"><i class="bi bi-person-fill"></i></label>
                            <input type="text" name="name" id="name" placeholder="Your Name or Your Email">
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="bi bi-lock-fill"></i></label>
                            <input type="password" name="pass" id="pass" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term">
                            <label for="agree-term" class="label-agree-term ps-4"><span><span></span></span>Remember me</label>
                        </div>
                        <div class="form-group form-button my-2">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Login">
                        </div>
                        @Html.ActionLink("Create an account", "SignUp", "User", new { @class = "signup-image-link" })
                    </form>
                </div>
                <div class="signup-image">
                    <img src="~/images/home/signup.jpg" alt="sing up image" width="450px">
                </div>
            </div>
        </div>
    </section>

    <style>
        * {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        }

        .bi-arrow-left {
            cursor: pointer;
            padding: 5px;
        }

        input:not(submit) {
            outline: none;
            border: none;
            border-bottom: 1px solid #000000;
            width: 300px;
            margin: 18px 0;
        }

        .agree-term {
            display: none;
        }

        .form-group {
            position: relative;
        }

        .agree-term + .label-agree-term {
            position: relative;
            padding-left: 30px;
            cursor: pointer;
            display: inline-block;
        }

            .agree-term + .label-agree-term span::before {
                content: "";
                position: absolute;
                left: 4px;
                top: 5px;
                width: 15px;
                height: 15px;
                border: 1px solid #000;
                border-radius: 2px;
                background-color: transparent;
            }

        .agree-term:checked + .label-agree-term span::after {
            content: "\2713";
            position: absolute;
            font-size: small;
            top: 48%;
            left: 12px;
            transform: translate(-50%, -50%);
            color: #000;
        }

        #agree-term {
            display: none;
        }

        #signup {
            border: none;
            border-radius: 4px;
            padding: 8px 20px;
            background-color: #0099e6;
            color: #fff;
            width: fit-content;
        }

        .signup-content {
            display: flex;
            justify-content: space-evenly;
            flex-direction: row-reverse;
        }

        a {
            color: #000;
        }

        @@media (max-width: 1023px) {
            .signup-image {
                display: none;
            }
        }
    </style>
</body>
</html>
