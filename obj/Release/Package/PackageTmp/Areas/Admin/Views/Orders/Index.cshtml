@model IEnumerable<MyProject_MVC.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@foreach (var item in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.CustomerName)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.CustomerAddress)</p>
        </div>
        <ul class="list-group list-group-light list-group-small">
            <li class="list-group-item px-4">Phone: @Html.DisplayFor(modelItem => item.CustomerPhone)</li>
            <li class="list-group-item px-4">Email: @Html.DisplayFor(modelItem => item.CustomerEmail)</li>
            <li class="list-group-item px-4">Status: @Html.DisplayFor(modelItem => item.Status), Payment: @Html.DisplayFor(modelItem => item.PaymentType)</li>
            <li class="list-group-item px-4">Oder Date: @Html.DisplayFor(modelItem => item.OrderDate)</li>
            <li class="list-group-item px-4">Note: @Html.DisplayFor(modelItem => item.CustomerNote)</li>
        </ul>
        <div class="card-body">
            <a href="#" class="btn btn-primary">Phê duyệt</a>
            <a href="#" class="btn btn-danger">Không Duyệt</a>
        </div>
    </div>
}