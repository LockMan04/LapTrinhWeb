@model IEnumerable<MyProject_MVC.Models.Category>

@{
    ViewBag.Title = "Index";
}
<div class="d-grid gap-2 col-6 my-2">
    @Html.ActionLink("Create", "Create", null, new { @class = "p-2 text-dark btn btn-primary w-25" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatName)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-info my-2" })
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
